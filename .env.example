# ==== Загальні налаштування ====

# Рівень логування: DEBUG, INFO, WARNING, ERROR
RIY_LOG_LEVEL=INFO

# Шлях до лог-файлу
RIY_LOG_FILE=logs/swarm.log

# Максимальний розмір лог-файлу в МБ
RIY_LOG_MAX_MB=5

# Кількість резервних копій лог-файлів
RIY_LOG_BACKUP_COUNT=3

# ==== Конфігураційний файл ====

# Шлях до YAML конфігурації системи
RIY_CONFIG_PATH=config/system_config.yaml

# ==== MAVLink-з’єднання ====

# Наприклад: udp:127.0.0.1:14550 або /dev/ttyUSB0
MAVLINK_CONNECTION=udp:127.0.0.1:14550

# ==== SITL ====

# Шлях до папки з ArduPilot SITL
SITL_PATH=/opt/ardupilot

# Кількість інстансів для симуляції
SITL_INSTANCES=3

# Тип моделі дрона: quad, hexa, plane
SITL_MODEL=quad

# ==== Комунікація ====

# UDP порт для обміну повідомленнями між дронами
SWARM_PORT=14550

# Broadcast-адреса (Wi-Fi)
SWARM_BROADCAST=192.168.1.255

# Частота heartbeat-повідомлень (мс)
SWARM_HEARTBEAT_MS=100
